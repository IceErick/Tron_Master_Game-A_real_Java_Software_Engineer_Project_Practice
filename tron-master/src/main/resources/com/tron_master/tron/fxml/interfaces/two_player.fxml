<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!-- Bind two-player mode controller -->

<BorderPane style="-fx-background-color: #000000; -fx-pref-width: 560; -fx-pref-height: 620;" stylesheets="@../javafx_settings.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Center area: game canvas container -->
    <center>
        <Pane fx:id="gameAreaContainer" style="-fx-background-color: #000000; -fx-pref-width: 500; -fx-pref-height: 500;" />
    </center>

    <!-- Bottom control bar: two-player scores + reset + exit -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #000000; -fx-pref-height: 60;">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>

            <!-- Two-player score display (vertical layout) -->
            <VBox spacing="5" style="-fx-background-color: #000000; -fx-padding: 0 10 0 10;">
                <Text fx:id="p1ScoreText" fill="WHITE">
                    <font>
                        <Font name="System" size="16" />
                    </font>
                </Text>
                <Text fx:id="p2ScoreText" fill="WHITE">
                    <font>
                        <Font name="System" size="16" />
                    </font>
                </Text>
            <HBox.margin>
               <Insets top="5.0" />
            </HBox.margin>
            </VBox>

            <!-- Reset button -->
            <Button fx:id="resetBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="2.0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true" />
                </graphic>
            </Button>

            <!-- Exit button -->
            <Button fx:id="exitBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="2.0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true" />
                </graphic>
            </Button>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
