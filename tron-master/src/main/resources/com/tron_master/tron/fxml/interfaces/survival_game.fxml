<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!-- Bind survival mode controller -->

<BorderPane style="-fx-background-color: #000000; -fx-pref-width: 560; -fx-pref-height: 620;" stylesheets="@../javafx_settings.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Center area: game canvas container (fills center, black background) -->
    <center>
        <Pane fx:id="gameAreaContainer" style="-fx-background-color: #000000; -fx-pref-width: 500; -fx-pref-height: 500;" />
    </center>

    <!-- Bottom control bar: score display + reset + exit -->
    <bottom>
        <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #000000; -fx-pref-height: 60;">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>

            <!-- Score display text (white, 16pt font, grows to fill left space) -->
            <Text fx:id="scoreText" fill="WHITE" style="-fx-padding: 0 10 0 10;" HBox.hgrow="ALWAYS">
                <font>
                    <Font name="System" size="16" />
                </font>
            </Text>

            <!-- Reset button -->
            <Button fx:id="resetBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="2.0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            </Button>

            <!-- Exit button (back to mode selection) -->
            <Button fx:id="exitBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="2.0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            </Button>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
