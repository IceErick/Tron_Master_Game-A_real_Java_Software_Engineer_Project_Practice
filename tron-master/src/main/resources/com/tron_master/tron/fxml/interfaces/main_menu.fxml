<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<!-- Bind main menu controller, specify root container style (black background) -->

<BorderPane style="-fx-background-color: #000000; -fx-pref-width: 560; -fx-pref-height: 620;" stylesheets="@../javafx_settings.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Center area: background image/instructions page toggle (fills center area) -->
    <center>
        <StackPane>
            <!-- Background image -->
            <ImageView fx:id="mainContentImage" fitHeight="495.0" fitWidth="560.0" preserveRatio="false" style="-fx-background-color: #000000;" />
            
            <!-- Settings button floating on top right -->
            <Button fx:id="settingsBtn" focusTraversable="false" style="-fx-background-color: transparent;" StackPane.alignment="TOP_RIGHT">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true" />
                </graphic>
                <padding>
                    <Insets bottom="0" left="0" right="0" top="0" />
                </padding>
                <StackPane.margin>
                    <Insets right="15.0" top="15.0" />
                </StackPane.margin>
            </Button>
         <Button fx:id="settingsBtn1" focusTraversable="false" style="-fx-background-color: transparent;" StackPane.alignment="TOP_RIGHT">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true" />
            </graphic>
            <padding>
               <Insets bottom="0" left="0" right="0" top="0" />
            </padding>
            <StackPane.margin>
               <Insets right="20.0" top="65.0" />
            </StackPane.margin>
         </Button>
        </StackPane>
    </center>

    <!-- Bottom button bar: horizontal layout, center-aligned, black background -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #000000; -fx-pref-height: 60;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>


            <!-- Play button -->
            <Button fx:id="playBtn" focusTraversable="false">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <!-- Button image -->
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            <padding>
               <Insets bottom="4.0" top="3.0" />
            </padding>
            </Button>

            <!-- Instructions button -->
            <Button fx:id="instructBtn" focusTraversable="false">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="4.0" top="3.0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            </Button>

            <!-- Quit button -->
            <Button fx:id="quitBtn" focusTraversable="false">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="4.0" top="3.0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            </Button>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
