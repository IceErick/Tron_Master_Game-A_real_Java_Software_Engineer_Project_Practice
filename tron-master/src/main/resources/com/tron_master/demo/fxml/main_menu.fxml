<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<!-- Bind main menu controller, specify root container style (black background) -->

<BorderPane style="-fx-background-color: #000000; -fx-pref-width: 500; -fx-pref-height: 560;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Center area: background image/instructions page toggle (fills center area) -->
    <center>
        <ImageView fx:id="mainContentImage" preserveRatio="false" style="-fx-background-color: #000000;">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin></ImageView>
    </center>

    <!-- Bottom button bar: horizontal layout, center-aligned, black background -->
    <bottom>
        <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #000000; -fx-pref-height: 60;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>


            <!-- Play button -->
            <Button fx:id="playBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <!-- Button padding: explicit Insets tag -->
                <padding>
                    <Insets bottom="0" left="0" right="0" top="0" />
                </padding>
                <!-- Button image -->
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            </Button>

            <!-- Instructions button -->
            <Button fx:id="instructBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="0" left="0" right="0" top="0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            </Button>

            <!-- Quit button -->
            <Button fx:id="quitBtn">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <padding>
                    <Insets bottom="0" left="0" right="0" top="0" />
                </padding>
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="150.0" preserveRatio="true" />
                </graphic>
            </Button>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </bottom>

</BorderPane>
