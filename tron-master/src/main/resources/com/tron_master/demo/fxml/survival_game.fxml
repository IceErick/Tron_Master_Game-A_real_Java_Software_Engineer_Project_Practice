<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>

<!-- Bind survival mode controller -->
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #000000; -fx-pref-width: 500; -fx-pref-height: 560;">

    <!-- Center area: game canvas container (fills center, black background) -->
    <center>
        <Pane fx:id="gameAreaContainer"
              style="-fx-background-color: #000000; -fx-pref-width: 500; -fx-pref-height: 500;"/>
    </center>

    <!-- Bottom control bar: score display + reset + exit -->
    <bottom>
        <HBox spacing="30"
              alignment="CENTER"
              style="-fx-background-color: #000000; -fx-pref-height: 60;">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>

            <!-- Score display text (white, 16pt font) -->
            <Text fx:id="scoreText"
                  fill="WHITE"
                  style="-fx-padding: 0 10 0 10;">
                <font>
                    <Font name="System" size="16" />
                </font>
            </Text>

            <!-- Reset button -->
            <Button fx:id="resetBtn">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <padding>
                    <Insets top="0" right="0" bottom="0" left="0"/>
                </padding>
                <graphic>
                    <ImageView fitWidth="50" fitHeight="50" preserveRatio="true"/>
                </graphic>
            </Button>

            <!-- Exit button (back to mode selection) -->
            <Button fx:id="exitBtn">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <padding>
                    <Insets top="0" right="0" bottom="0" left="0"/>
                </padding>
                <graphic>
                    <ImageView fitWidth="50" fitHeight="50" preserveRatio="true"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>

</BorderPane>